<%- include("partials/header") %>
<h1 class=" main-text text-center">Welcome To The Wall Hub</h1>



<form action="/create-post" method="POST">
    <h4 class="text-center">Post Title</h4>
    <input type="text" name="title" id="title">
    <h4 class="text-center">Blog Content</h4>
    <textarea id="blog_content" name="content" rows="4" cols="50" placeholder="Enter your post content"></textarea><br>
    <!-- Image input field -->
    <div class="image">
        <h4 class="text-center">Upload Image</h4>
        <input type="file" name="image" id="image">
    </div>
    <button type="submit">Create Post</button>
    <!-- //might have to add value feature// -->
</form>

<!-- Display Posts-->
<div class="post-div">
    <% posts.forEach(post => { %>
        <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
    
            <!--Edit post-->
            <a href="/edit-post/<%= post.id %>">Edit</a>
    
            <!-- Delete post -->
            <form action="/delete-post/<%= post.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?')">
                <button type="submit">Delete</button>
            </form>
        </div>
    <% }); %>
</div>




